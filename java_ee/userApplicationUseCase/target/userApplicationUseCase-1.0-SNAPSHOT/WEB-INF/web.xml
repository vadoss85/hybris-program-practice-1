<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ReadUsersServlet</servlet-name>
        <servlet-class>vadoss.userapplicationusecase.userapplicationusecase.ReadUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReadUsersServlet</servlet-name>
        <url-pattern>/readUserServlet</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://localhost/mydb</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>_PASSword1_</param-value>
    </context-param>
</web-app>